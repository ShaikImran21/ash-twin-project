{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "globals": {
        "google": "readonly",
        "ADVENTURE_PATHS_COMPLETE": "readonly",
        "ADVENTURE_PATHS_PART2": "readonly",
        "ADVENTURE_PATHS_PART3": "readonly",
        "DynamicAdventureGenerator": "readonly",
        "getCuratedPhotos": "readonly"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": "off",
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-undef": "warn"
    },
    "ignorePatterns": ["node_modules/", ".dist/", "*.backup", "*.min.js"]
}
