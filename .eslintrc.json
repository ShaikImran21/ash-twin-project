{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "globals": {
        "google": "readonly",
        "ADVENTURE_PATHS_COMPLETE": "readonly",
        "ADVENTURE_PATHS_PART2": "readonly",
        "ADVENTURE_PATHS_PART3": "readonly",
        "DynamicAdventureGenerator": "readonly",
        "getCuratedPhotos": "readonly"
    },
    "rules": {
        "indent": "off",
        "linebreak-style": "off",
        "quotes": "off",
        "semi": "warn",
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-undef": "warn"
    },
    "ignorePatterns": ["node_modules/", ".dist/", "*.backup", "*.min.js"]
}
